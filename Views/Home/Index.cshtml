@inject Microsoft.AspNetCore.Http.IHttpContextAccessor _session
@{
    var clientName = _session.HttpContext.Session.GetString("client_id");
    ///var user_id = _session.HttpContext.Session.GetString("user_id");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .chat-container {
            display: flex;
            height: 100vh;
        }

        .receiver-list {
            width: 250px;
            background-color: #ffffff;
            border-right: 1px solid #e9ecef;
            overflow-y: auto;
            padding: 10px;
        }

        .receiver-item {
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            margin-bottom: 10px;
            transition: background-color 0.3s;
        }

        .receiver-item:hover {
            background-color: #e9ecef;
        }

        .chat-box {
            flex: 1;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            height: 500px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .chat-messages {
            flex: 1;
            overflow-y: scroll;
            padding: 10px;
            border-bottom: 1px solid #e9ecef;
        }

        .input-group {
            border-top: 1px solid #e9ecef;
        }

        #messageInput {
            border-radius: 0;
        }

        #sendButton, #attachmentButton, #fileSendButton {
            border-radius: 0;
        }

        .fas {
            font-size: 1.2rem;
        }

        #attachmentButton {
            cursor: pointer;
        }

        /* Custom Popup Styling */
        #filePopup {
            display: none;
            position: absolute;
            background-color: #ffffff;
            border: 1px solid #e9ecef;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 10px;
            z-index: 1000;
            width: 300px;
            border-radius: 5px;
            top: -100px; /* Adjust as needed */
            left: 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        #filePopup button {
            margin-top: 10px;
        }

        #fileSendButton {
            display: none;
        }

        #fileNameDisplay {
            margin-right: 10px; /* Adjust space for the close icon */
        }

        #filePopup .close {
            cursor: pointer;
            color: #6c757d;
            font-size: 1.2rem;
        }

        #cancelButton {
            float: right;
        }

        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }

        /* Modal Content */
        .modal-content {
            background-color: #fefefe;
            margin: 15% auto; /* 15% from the top and centered */
            padding: 20px;
            border: 1px solid #888;
            width: 80%; /* Could be more or less, depending on screen size */
        }

        /* The Close Button */
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        #email {
            width: 100%
        }

        #name {
            width: 100%
        }

        #loginEmail {
            width: 100%
        }

        #loginPassword {
            width: 100%
        }
        #password {
            width: 100%
        }
        .right-button {
            float: right;
        }

        .title {
            text-align: center;
            color: brown;
        }

        .message-container {
            display: flex;
            margin-bottom: 10px;
        }

        .message-sender {
            margin-left: auto;
            background-color: #d1e7dd;
            padding: 8px 12px;
            border-radius: 12px;
            max-width: 70%;
            text-align: right;
        }

        .message-receiver {
            margin-right: auto;
            background-color: #f8d7da;
            padding: 8px 12px;
            border-radius: 12px;
            max-width: 70%;
            text-align: left;
        }


        .receiver-list {
            display: none; /* Hidden by default */
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-right: 1px solid #e9ecef;
            height: 500px;
            width: 250px; /* Adjust width as needed */
            overflow-y: auto;
        }

        /* Show receiver list after sending a message */
        .show-receiver-list .receiver-list {
            display: block;
        }


        .modal_purpose {
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
        }

        .modal-content-purpose {
            background-color: #fff;
            margin: 15% auto;
            padding: 20px;
            width: 40%;
        }

        .purpose-btn {
            margin: 10px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }

        .purpose-btn:hover {
            background-color: #45a049;
        }

        #loginButton{
            width:120px;
            float:left;
        }

        .receiver-item {
            padding: 10px;
            cursor: pointer;
        }

        .receiver-item.selected {
            background-color: #007BFF; /* Change to your desired color */
            color: white; /* Change text color for better visibility */
        }
    </style>
</head>
<body>   
    <div id="status" style="display: none;"></div>
    <div id="alertModal" class="modal">
        <div class="modal-content">
            <h4 class="title">Registration Form</h4>
            <form id="alertForm">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required><br>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required><br>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required><br><br />
                <button type="button" id="cancelAlert" class="btn btn-danger right-button">Cancel</button>&nbsp;
                <button type="submit" class="btn btn-success right-button">Submit</button>
            </form>
            <button type="button" id="loginButton" class="btn btn-primary">Login</button>
        </div>
    </div>

    <!-- Login Modal Dialog -->
    <div id="loginModal" class="modal" style="display:none;">
        <div class="modal-content">
            <h4 class="title">Login Form</h4>
            <form id="loginForm">
                <label for="loginEmail">Email:</label>
                <input type="email" id="loginEmail" name="loginEmail" required><br>
                <label for="loginPassword">Password:</label>
                <input type="password" id="loginPassword" name="loginPassword" required><br><br />
                <button type="button" id="cancelLogin" class="btn btn-danger right-button">Cancel</button>&nbsp;
                <button type="submit" id="loginButton_submit" class="btn btn-success right-button">Login</button>
            </form>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="chat-container d-flex">
                    <div id="receiverList" class="receiver-list">
                        <!-- Receiver list will be dynamically inserted here -->
                    </div>
                    <input type="hidden" id="client_id" name="client_id" value="@(clientName)" />
                    <div class="chat-box border rounded p-3 flex-grow-1">
                        <div class="chat-messages" id="chatMessages">
                            <!-- Messages will be dynamically inserted here -->
                        </div>
                        <div class="input-group mt-3">
                            <input type="file" class="form-control" id="fileInput" style="display:none;">
                            <div class="input-group-prepend">
                                <button class="btn btn-light border-0" id="attachmentButton">
                                    <i class="fas fa-paperclip"></i>
                                </button>
                            </div> &nbsp;
                            <input type="text" class="form-control" id="messageInput" placeholder="Type your message..."> &nbsp;&nbsp;
                            <button class="btn btn-light border-0" id="sendButton">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                            <button class="btn btn-light border-0" id="fileSendButton">
                                <i class="fas fa-upload"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    

    <!-- Custom File Popup -->
    <div id="filePopup">
        <span id="fileNameDisplay">No file selected</span>
        <i class="fas fa-times close" id="cancelButton"></i>
    </div>

    <div id="purposePopup" class="modal_purpose" style="display: none;">
        <div class="modal-content-purpose">
            <h4>Select the purpose of your message</h4>
            <!-- Buttons will be dynamically appended here -->
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/signalr.min.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
